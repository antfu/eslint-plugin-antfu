{
  "name": "eslint-plugin-antfu",
  "type": "module",
  "version": "3.1.2",
  "packageManager": "pnpm@10.27.0",
  "description": "Anthony's opinionated ESLint rules",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/eslint-plugin-antfu#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/eslint-plugin-antfu.git"
  },
  "bugs": "https://github.com/antfu/eslint-plugin-antfu/issues",
  "keywords": [
    "eslint-plugin"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "pnpm run dev && eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@antfu/ni": "^28.0.0",
    "@antfu/utils": "^9.3.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^25.0.3",
    "@typescript-eslint/typescript-estree": "^8.52.0",
    "@typescript-eslint/utils": "^8.52.0",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "eslint-vitest-rule-tester": "^3.0.1",
    "jsonc-eslint-parser": "^2.4.2",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "resolutions": {
    "eslint-plugin-antfu": "workspace:*"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
